<?xml version="1.0" encoding="UTF-8"?><xsl:stylesheet version="1.0" xmlns="http://www.w3.org/1999/xhtml" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:sfm="http://schema.slothsoft.net/farah/module" xmlns:sfd="http://schema.slothsoft.net/farah/dictionary">    <xsl:import href="farah://slothsoft@farah/xsl/module" />    <xsl:template match="/*">        <xsl:variable name="chatNode" select="*[@name='form']" />        <xsl:variable name="chatName" select="$chatNode//@data-chat-database" />        <fieldset data-chat-id="shoutbox">            <legend>                <sfd:lookup key="chat.title.{$chatName}" />            </legend>            <small>                <sfd:lookup key="chat.description.{$chatName}" />            </small>            <xsl:copy-of select="$chatNode/node()" />            <xsl:apply-templates select="sfm:error" mode="sfm:html" />        </fieldset>    </xsl:template></xsl:stylesheet>